<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background_light_gray"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/margin_medium"
        android:gravity="center_horizontal">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:maxWidth="480dp"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation"
            app:cardBackgroundColor="@color/card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/margin_large">

                <!-- Produktuaren irudia -->
                <ImageView
                    android:id="@+id/produktuDetalaIrudia"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/cd_katalogoa_irudia"
                    android:background="@color/divider_color"
                    android:layout_marginBottom="@dimen/margin_medium"
                    tools:src="@drawable/macbook"/>

                <TextView
                    android:id="@+id/produktuDetalaIzena"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_title"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="@dimen/margin_small"
                    tools:text="MacBook Pro"/>

                <TextView
                    android:id="@+id/produktuDetalaKodea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="@dimen/margin_medium"
                    tools:text="Artikulu kodea: 1"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/margin_medium">

                    <TextView
                        android:id="@+id/produktuDetalaPrezioa"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_size_large"
                        android:textStyle="bold"
                        android:textColor="@color/primary_purple"
                        tools:text="1299,99 â‚¬"/>

                    <TextView
                        android:id="@+id/produktuDetalaStock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_normal"
                        android:textColor="@color/text_secondary"
                        tools:text="Stock: 15"/>
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnProduktuDetalaErosi"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height"
                    app:icon="@drawable/ic_cart_24"
                    app:iconGravity="textStart"
                    app:iconSize="24dp"
                    app:iconPadding="8dp"
                    app:cornerRadius="12dp"
                    android:text="@string/btn_erosi"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:contentDescription="@string/btn_erosi"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</ScrollView>
