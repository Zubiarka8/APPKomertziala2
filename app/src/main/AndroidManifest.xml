<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:localeConfig="@xml/locales_config"
        android:supportsRtl="true"
        android:theme="@style/Theme.APPKomertziala">
        <!-- Google Maps API gakoa: https://developers.google.com/maps/documentation/android-sdk/get-api-key -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${MAPS_API_KEY}" />

        <activity
            android:name=".activity.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.APPKomertziala">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="false" />
        <activity
            android:name=".activity.ZitaGehituActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".activity.AgendaModuluaActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".activity.BisitaFormularioActivity"
            android:exported="false"
            android:parentActivityName=".activity.AgendaModuluaActivity" />
        <activity
            android:name=".activity.BazkideaFormularioActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".activity.KomertzialaFormularioActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".activity.ProduktuDetalaActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".activity.EskaerakActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>

</manifest>